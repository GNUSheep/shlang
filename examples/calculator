fn main() {
    while true {
        println("=== SHLANG CALCULATOR ===")
        println("\t1.Add")
        println("\t2.Sub")
        println("\t3.Mul")
        println("\t4.Div")
        println("\t5.QUIT")
        
        var operation: String = input("Enter number to choose operation: ")
        
        if conv(operation.value) > 5 or conv(operation.value) < 1 {
            println("Choose option from 1-5")
            continue
        }

        if conv(operation.value) == 5 {
            break
        }

        var a: int = conv(input("Enter first number: "))
        var b: int = conv(input("Enter second number: "))

        if operation.value == "1" {
            println(a+b)
        }elif operation.value == "2" {
            println(a-b)
        }elif operation.value == "3" {
            println(a*b)
        }elif operation.value == "4" {
            println(a/b)
        }
    }
}